{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://uas.dev/schemas/recipe.json",
  "title": "UAS Install Recipe",
  "description": "Schema for validating UAS install recipe YAML files",
  "type": "object",
  "required": ["id", "name", "description", "homepage", "license", "version", "installer", "metadata", "requirements"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
      "minLength": 2,
      "maxLength": 64,
      "description": "Unique app identifier (kebab-case, lowercase)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Human-readable display name"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512,
      "description": "One-line description"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Official website URL"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier"
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Semantic version or 'latest'"
    },
    "version_cmd": {
      "type": "string",
      "description": "Command to check installed version"
    },
    "version_regex": {
      "type": "string",
      "description": "Regex to extract version from command output"
    },
    "installer": {
      "type": "object",
      "required": ["type", "url", "sha256"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["exe", "msi", "zip", "portable"],
          "description": "Installer type"
        },
        "url": {
          "type": "string",
          "pattern": "^https://",
          "description": "HTTPS download URL"
        },
        "sha256": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$",
          "description": "SHA-256 checksum (64 hex characters)"
        },
        "size_bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Expected file size in bytes"
        },
        "exe": {
          "type": "object",
          "properties": {
            "silent_args": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Arguments for silent installation"
            },
            "install_dir_arg": {
              "type": "string",
              "description": "Argument to specify install directory"
            }
          },
          "required": ["silent_args"]
        },
        "msi": {
          "type": "object",
          "properties": {
            "properties": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "MSI property overrides"
            }
          }
        },
        "zip": {
          "type": "object",
          "required": ["extract_to"],
          "properties": {
            "extract_to": {
              "type": "string",
              "description": "Path to extract to (supports variables)"
            },
            "strip_root": {
              "type": "boolean",
              "default": false,
              "description": "Strip the root directory from the archive"
            }
          }
        },
        "portable": {
          "type": "object",
          "required": ["copy_to", "executable"],
          "properties": {
            "copy_to": {
              "type": "string",
              "description": "Destination directory (supports variables)"
            },
            "executable": {
              "type": "string",
              "description": "Name of the executable file"
            }
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "exe" } } },
          "then": { "required": ["exe"] }
        },
        {
          "if": { "properties": { "type": { "const": "msi" } } },
          "then": { "required": ["msi"] }
        },
        {
          "if": { "properties": { "type": { "const": "zip" } } },
          "then": { "required": ["zip"] }
        },
        {
          "if": { "properties": { "type": { "const": "portable" } } },
          "then": { "required": ["portable"] }
        }
      ]
    },
    "side_effects": {
      "type": "object",
      "properties": {
        "path": {
          "type": "object",
          "properties": {
            "add": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Directories to add to PATH"
            }
          }
        },
        "env": {
          "type": "object",
          "properties": {
            "set": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Environment variables to set"
            }
          }
        },
        "registry": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["key", "value_name", "value_data", "value_type"],
            "properties": {
              "key": { "type": "string" },
              "value_name": { "type": "string" },
              "value_data": { "type": "string" },
              "value_type": {
                "type": "string",
                "enum": ["REG_SZ", "REG_DWORD", "REG_QWORD", "REG_EXPAND_SZ", "REG_BINARY"]
              }
            }
          }
        },
        "shortcuts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "target", "location"],
            "properties": {
              "name": { "type": "string" },
              "target": { "type": "string" },
              "location": {
                "type": "string",
                "enum": ["desktop", "start_menu"]
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["categories", "tags", "maintainer", "updated"],
      "properties": {
        "categories": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "App categories"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Freeform search tags"
        },
        "maintainer": {
          "type": "string",
          "description": "Recipe maintainer"
        },
        "updated": {
          "type": "string",
          "description": "ISO 8601 date when recipe was last updated"
        }
      }
    },
    "requirements": {
      "type": "object",
      "required": ["os", "arch", "admin", "dependencies"],
      "properties": {
        "os": {
          "type": "string",
          "description": "Minimum Windows version"
        },
        "arch": {
          "type": "string",
          "enum": ["x64", "x86", "arm64"],
          "description": "Required architecture"
        },
        "admin": {
          "type": "boolean",
          "description": "Whether installation requires elevation"
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Other recipe IDs that must be installed first"
        }
      }
    }
  }
}
