{
  "name": "uas",
  "version": "0.1.0",
  "description": "Universal App Store -- install, save, and restore your entire dev environment",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "uas": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ --ext .ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "keywords": [
    "universal-app-store",
    "windows",
    "installer",
    "environment",
    "package-manager",
    "developer-tools",
    "profile",
    "restore",
    "backup",
    "devtools",
    "setup",
    "uas"
  ],
  "author": "UAS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sammadijaz/uas.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/sammadijaz/uas#readme",
  "bugs": {
    "url": "https://github.com/sammadijaz/uas/issues"
  },
  "dependencies": {
    "@uas/engine": "file:../engine",
    "commander": "^13.1.0",
    "chalk": "^4.1.2",
    "yaml": "^2.7.0",
    "ora": "^5.4.1",
    "cli-table3": "^0.6.5"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
